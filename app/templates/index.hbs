
<div class="landing">

  {{#link-to 'work.show' currentProject.id
    class="landing__info"
  }}
    <h1 class="landing__title">{{currentProject.title}}</h1>
  {{/link-to}}

  {{!-- <div class="landing__info">

  </div> --}}


  {{#if videoIsPlaying}}
    {{three-player
      currentId=currentVideo.id
      videos=loadedVideos
      transitionToProject=transitionToProject
      context=context
    }}
  {{/if}}
  {{#each projects as |project|}}
    {{ivy-videojs
      id=project.id
      class="landing__video-src"
      canplay=(action 'videoReady')
      controls=true
      loop=true
      src=project.videoLocal}}
  {{/each}}
  {{#link-to "work" class="landing__skeleton-icon"}}{{/link-to}}
</div>

{{outlet}}
