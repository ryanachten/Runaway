<article class="project-item">
  {{ivy-videojs
    canplay='canplay'
    controls=true
    ended='ended'
    fluid=true
    pause='pause'
    playing='playing'
    src=project.videoLocal}}
  {{input
    class="project-item__link"
    type='text' value=project.title
    enter=(action 'editProject' project)
  }}
  {{input
    type='text' value=project.client
    enter=(action 'editProject' project)
  }}
  {{input
    type='text' value=project.date
    enter=(action 'editProject' project)
  }}
  {{input
    type='text' value=project.category
    enter=(action 'editProject' project)
  }}
  {{textarea
    value=project.description
    enter=(action 'editProject' project)
  }}
  <button type="button" name="button" onclick={{action "deleteProject" project.id}}>Delete</button>
</article>
