<article class="filter">
  <h3>Filter projects</h3>
  <div class="filter__toggles">
    <div class="filter__check">
      <input
        value=''
        checked=true
        type="radio"
        name="project-filter"
        onclick={{action 'handleFilterEntry' ''}}
      />
      <span>All</span>
    </div>
    {{#each filtersValues as |value|}}
    <div class="filter__check">
      {{input
        value=value
        id=value
        type="radio"
        name="project-filter"
        change=(action 'handleFilterEntry' value)
      }}
      <label for={{value}}>{{value}}</label>
    </div>
    {{/each}}
  </div>
</article>

{{yield results}}
